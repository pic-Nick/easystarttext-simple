<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/timers_header">

        <SwitchPreference
            app:defaultValue="false"
            app:key="@string/pref_timer_1"
            app:title="@string/timer_1_onoff"
            app:summaryOff="@string/timer_1_onoff_summary_off"
            app:summaryOn="@string/timer_1_onoff_summary_on"/>

        <MultiSelectListPreference
            app:defaultValue="@array/empty_array"
            app:entries="@array/days_of_week"
            app:entryValues="@array/days_of_week_val"
            app:key="@string/pref_timer_1_days"
            app:title="@string/timer_1_days"
            app:dependency="@string/pref_timer_1"/>

    </PreferenceCategory>

</PreferenceScreen>